<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:user="org.breeze.flex.User"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:flex="org.breeze.flex.*"
			   width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import mx.utils.StringUtil;
			
			import org.breeze.core.web.Page;
			import org.breeze.flex.User;
			
			
			[Bindable] public var page:Page;
			
			private function select(index:String):void
			{
				page = new Page();
				page.page = Number(index);
				ro.select(page);
			}
			
			private function open():void
			{
				
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:RemoteObject id="ro" destination="clinicService" endpoint="http://localhost:8080/breeze/messagebroker/amf"/>
	</fx:Declarations>
	
	<s:controlBarContent>
		<s:TextInput id="searchStr"/>
		<s:Button label="Search" click="select(searchStr.text)"/>
		<s:Button label="user" click="open()"/>
	</s:controlBarContent>
	
	<mx:DataGrid id="dg" dataProvider="{ro.select.lastResult}" top="8" left="8" right="8" bottom="298"/>
	<flex:User id="user" x="212" y="355" width="325" height="223"></flex:User>
	
</s:Application>
